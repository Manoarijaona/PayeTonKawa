#:kivy 2.0.0
#:import Window kivy.core.window.Window

Screen:
    MDBoxLayout:
        orientation: "vertical"
        size: Window.size

        MDTopAppBar:
            title: "      Liste des produits"
            left_action_items: [["account-plus", lambda x: app.callback(x)]]
            right_action_items: [["cart", lambda x: app.callback(x)]]

        ScrollView:
            size_hint: (1, 1)

            MDList:
                id: product_list
                size_hint_y: None
                height: self.minimum_height  # this will automatically set the height of the list
