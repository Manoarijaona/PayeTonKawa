#:kivy 2.0.0
sm:
    LoginScreen:
    HomeScreen:

<LoginScreen>:
    name: 'login'
    MDCard:
        size_hint: None, None
        size: 350, 580
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 1
        padding: 25
        spacing: 25
        orientation: 'vertical'

        Image:
            source: 'kawa.png'
            size: self.texture_size
            size_hint_y: None
            height: 200


        MDTextField:
            id: username_text_field
            mode: 'round'
            hint_text: 'email'
            icon_right: 'account'
            icon_right_color: app.theme_cls.theme_style
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: None
            width: 200
            required: True

        MDTextField:
            id: password_text_field
            mode: 'round'
            hint_text: 'Mot de passe'
            icon_right: 'eye-off'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: None
            width: 200
            password: True 

        MDRoundFlatButton:
            text: 'Connexion'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: None
            width: 200
            on_release: root.manager.current = 'home'

        MDRoundFlatButton:
            text: 'Qr code'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: None
            width: 200
            on_release: app.create_account()

        MDTextButton:
            text: 'Mot de passe oubli√© ?'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: None
            width: 200
            on_release: app.forgot_password()

<HomeScreen>:
    name: 'home'
    MDCard:
        size_hint: None, None
        size: 350, 580
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 1
        padding: 25
        spacing: 25
        orientation: 'vertical'

        Image:
            source: 'kawa.png'
            size: self.texture_size
            size_hint_y: None
            height: 200

        MDLabel:
            text: 'Bienvenue'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: None
            width: 200

